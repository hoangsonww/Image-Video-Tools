{
  "name": "Image & Video Tools",
  "short_name": "ImgVidTools",
  "description": "A comprehensive and lightweight suite of tools for manipulating images and videos directly in your browser.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": [
    {
      "src": "assets/icons/icon-48.webp",
      "sizes": "48x48",
      "type": "image/webp",
      "purpose": "any maskable"
    },
    {
      "src": "assets/icons/icon-128.webp",
      "sizes": "128x128",
      "type": "image/webp",
      "purpose": "any maskable"
    },
    {
      "src": "assets/icons/icon-256.webp",
      "sizes": "256x256",
      "type": "image/webp",
      "purpose": "any maskable"
    },
    {
      "src": "assets/icons/icon-512.webp",
      "sizes": "512x512",
      "type": "image/webp",
      "purpose": "any maskable"
    }
  ],
  "start_url": "index.html",
  "display": "standalone",
  "background_color": "#007bff",
  "theme_color": "#007bff",
  "orientation": "any",
  "scope": "/",
  "permissions": [],
  "author": "Son Nguyen",
  "default_locale": "en",
  "shortcuts": [
    {
      "name": "Resize an Image",
      "description": "Resize your images to specific dimensions",
      "url": "/index.html",
      "icons": [
        {
          "src": "assets/icons/icon-48.webp",
          "sizes": "48x48"
        }
      ]
    },
    {
      "name": "Crop an Image",
      "description": "Crop your images with ease",
      "url": "/src/html/cropper.html",
      "icons": [
        {
          "src": "assets/icons/icon-48.webp",
          "sizes": "48x48"
        }
      ]
    },
    {
      "name": "Rotate an Image",
      "description": "Rotate your images",
      "url": "/src/html/rotator.html",
      "icons": [
        {
          "src": "assets/icons/icon-48.webp",
          "sizes": "48x48"
        }
      ]
    },
    {
      "name": "Apply Filters to an Image",
      "description": "Apply various filters to your images",
      "url": "/src/html/filter.html",
      "icons": [
        {
          "src": "assets/icons/icon-48.webp",
          "sizes": "48x48"
        }
      ]
    },
    {
      "name": "Convert Image Format",
      "description": "Convert images between different formats",
      "url": "/src/html/converter.html",
      "icons": [
        {
          "src": "assets/icons/icon-48.webp",
          "sizes": "48x48"
        }
      ]
    },
    {
      "name": "Add Watermark to an Image",
      "description": "Add text watermark to your images",
      "url": "/src/html/watermarker.html",
      "icons": [
        {
          "src": "assets/icons/icon-48.webp",
          "sizes": "48x48"
        }
      ]
    },
    {
      "name": "Generate Thumbnails",
      "description": "Generate thumbnails from videos",
      "url": "/src/html/thumbnail-generator.html",
      "icons": [
        {
          "src": "assets/icons/icon-48.webp",
          "sizes": "48x48"
        }
      ]
    },
    {
      "name": "Remove Sound from Video",
      "description": "Remove audio from your videos",
      "url": "/src/html/sound-remover.html",
      "icons": [
        {
          "src": "assets/icons/icon-48.webp",
          "sizes": "48x48"
        }
      ]
    },
    {
      "name": "About",
      "description": "Learn more about this app",
      "url": "/about.html",
      "icons": [
        {
          "src": "assets/icons/icon-48.webp",
          "sizes": "48x48"
        }
      ]
    }
  ],
  "background": {
    "scripts": []
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "assets/icons/icon-48.webp",
      "128": "assets/icons/icon-128.webp"
    }
  }
}
